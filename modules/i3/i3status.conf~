general {
        colors = true
        interval = 3
}

order = "cpu_usage"
order += "volume master"
order += "ethernet eth0"
order += "time"

#order += "cpu_temperature 0"
#order += "load"
#order += "ipv6"
#order += "wireless wlan0"


volume master {
	format = "volume: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
cpu_usage {
	format = "CPU: %usage"
}
ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "Net: %ip (%speed)"
		format_down = "Net: down"
}
time {
	format = "%H:%M:%S - %d/%m/%Y"
}

